{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         },
         "highlight": {
           "lsRanges" : true
         }
       }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["json", "javascript", "javascriptreact", "typescript", "typescriptreact", "graphql"]
}
